<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <RelativeLayout
        android:id="@+id/activity_main_layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_top_bar"
        android:paddingRight="@dimen/offset_medium"
        android:paddingLeft="@dimen/offset_medium" >

        <ImageView
            android:layout_width="@dimen/icon_size_large"
            android:layout_height="@dimen/icon_size_large"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_launcher"
            android:scaleType="centerInside" />

        <Button
            android:id="@+id/activity_main_top_button_set"
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="@dimen/icon_size_medium"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/top_button_set" />

        <Button
            android:id="@+id/activity_main_top_button_inport"
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="@dimen/icon_size_medium"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/offset_less"
            android:layout_toLeftOf="@id/activity_main_top_button_set"
            android:background="@drawable/top_button_import" />

        <Button
            android:id="@+id/activity_main_top_button_search"
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="@dimen/icon_size_medium"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/offset_less"
            android:layout_toLeftOf="@id/activity_main_top_button_inport"
            android:background="@drawable/top_button_search" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_main_layout_top"
        android:layout_marginLeft="@dimen/offset_less"
        android:layout_marginRight="@dimen/offset_less"
        android:layout_marginTop="@dimen/offset_medium" >

        <Button
            android:id="@+id/activity_main_triangle_button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/main_triangle_button_1" />

        <Button
            android:id="@+id/activity_main_triangle_button_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/main_triangle_button_2" />

        <Button
            android:id="@+id/activity_main_triangle_button_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/main_triangle_button_3" />

        <Button
            android:id="@+id/activity_main_button_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/main_button_add" />

        <TextView
            android:id="@+id/activity_main_text_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/main_text_tip"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="#ff000000"
            android:textSize="@dimen/text_size_small" />
    </RelativeLayout>

    <com.example.views.NoScrollListView
        android:id="@+id/activity_main_list_frequent_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/offset_larger"
        android:layout_marginLeft="@dimen/offset_medium"
        android:layout_marginRight="@dimen/offset_medium" >
    </com.example.views.NoScrollListView>

</RelativeLayout>