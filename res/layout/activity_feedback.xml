<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/activity_feedback_edit_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_corner_radius_all_ffffffff"
        android:gravity="top"
        android:minLines="5"
        android:padding="@dimen/offset_medium"
        android:textColor="#ff555555"
        android:textSize="@dimen/text_size_medium" />

    <TextView
        android:id="@+id/activity_feedback_text_mailbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_medium"
        android:background="@drawable/background_corner_radius_all_ffffffff"
        android:padding="@dimen/offset_medium"
        android:text="邮箱"
        android:textColor="#ff555555"
        android:textSize="@dimen/text_size_medium" />

    <TextView
        android:id="@+id/activity_feedback_text_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_medium"
        android:background="@drawable/background_corner_radius_all_ffffffff"
        android:padding="@dimen/offset_medium"
        android:text="手机"
        android:textColor="#ff555555"
        android:textSize="@dimen/text_size_medium" />

</LinearLayout>